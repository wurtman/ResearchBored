<div class="d-flex flex-row w-100 h-100 justify-content-start justify-content-lg-end align-items-center flex-wrap">
    <div class="ms-2 mb-1">
        <div class="dropdown">
            <button id="dropdownMenuButton1" aria-expanded="false" type="button" data-bs-toggle="dropdown" class="d-flex justify-content-center align-items-center bg-white dropdown-toggle btn btn-white btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-backspace" viewBox="0 0 16 16">
                    <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z"></path>
                    <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1h7.08zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-7.08z"></path>
                </svg>
                <span class="me-1 ms-2">Go back to</span>
            </button>
            <ul class="dropdown-menu p-0" aria-labelledby="dropdownMenuButton1" style="">
                <li><small><a class="dropdown-item" href="/">Website home</a></small></li>
                <li><small><a class="dropdown-item" href="/admin">Admin dashboard</a></small></li>
                <li><small><a class="dropdown-item" href="#" onclick="history.go(-1)">Previous page</a></small></li>
            </ul>
        </div>
    </div>
    <% if being == 'index' %>
      <div class="ms-2 mb-1">
        <%= render 'action_create' %>
      </div>      
    <% elsif being == 'new' %>
      <div class="ms-2 mb-1">
        <%= render 'action_index' %>
      </div>
    <% elsif being == 'edit' %>
      <div class="ms-2 mb-1">
        <%= render 'action_create' %>
      </div>
      <div class="ms-2 mb-1">
        <%= render 'action_show', account: account %>
      </div>      
      <div class="ms-2 mb-1">
        <%= render 'action_delete', account: account %>
      </div>
      <div class="ms-2 mb-1">
        <%= render 'action_index' %>
      </div>
    <% elsif being == 'show' %>
      <div class="ms-2 mb-1">
        <%= render 'action_create' %>
      </div>
      <div class="ms-2 mb-1">
        <%= render 'action_edit', account: account %>
      </div>      
      <div class="ms-2 mb-1">
        <%= render 'action_delete', account: account %>
      </div>
      <div class="ms-2 mb-1">
        <%= render 'action_index' %>
      </div>
    <% end %>

</div>

