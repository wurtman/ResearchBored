<div class="container">
  <div class="alert alert-info d-flex flex-row justify-content-start align-items-center" style="border-radius: 0.4rem;">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-info-circle me-3 d-none d-sm-block" viewBox="0 0 16 16"> <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path> <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"></path> </svg>
    <p class="mb-0">
      <span class="d-block fs-small">Editables are pages, or part of pages, that can be edited from the admin side.</span>
    </p>
  </div>
  <div class="row mb-3">
    <div class="col-12 col-lg-5 justify-content-start align-items-start mb-lg-2">
      <h1 class="mb-2 mb-lg-0 fw-bold truncate h3">
        Editables
      </h1>
    </div>
    <div class="col-12 col-lg-auto flex-1 ms-auto justify-content-center align-items-end mb-lg-2">
      <%= render 'actions', being: 'index' %>
    </div>
  </div>
  <div class="card p-0 p-sm-3 p-lg-4 flex-column justify-content-center align-items-between mb-2">
    <table class="table admin-table-index">
      <thead>
        <tr>
          <th class="d-none d-sm-table-cell">Id</th>
          <th>Shortname</th>
          <th class="d-none d-lg-table-cell">Content</th>
          <th class="d-none d-lg-table-cell">Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @editables.each_with_index do |editable, indx| %>
          <tr>
            <td class="d-none d-sm-table-cell">
              <%= editable.id %>
            </td>
            <td>
              <%= editable.shortname %>
            </td>                  
            <td class="d-none d-lg-table-cell">
              <%= editable.kontent.present? ? truncate(editable.kontent, length: 17) : '<not set>' %>
            </td>                  
            <td class="d-none d-lg-table-cell">
              <%= editable.description.try(:[], 0, 50) %>
            </td>                  
            <td>
              <div class="d-flex d-flex justify-content-end">
                <%= link_to [:admin, editable], :class => "d-flex justify-content-center align-items-center btn btn-sm btn-ghost ms-1 show-editable-#{indx}" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"></path>
                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"></path>
                  </svg>
                  <span class="ms-1 d-none d-md-block">Show</span>
                <% end %>
                <%= link_to edit_admin_editable_path(editable), :class => "d-flex justify-content-center align-items-center btn btn-sm btn-ghost ms-1 edit-editable-#{indx}" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                  </svg>
                  <span class="ms-1 d-none d-md-block">Edit</span>
                <% end %>
                <%= form_with url: admin_editable_path(editable.id), method: :delete, data: { turbo: false } do |form| %>
                  <%= form.submit 'Destroy', class: "admin-destroy-item d-flex justify-content-center align-items-center btn btn-sm btn-ghost ms-1 d-none d-md-block", style: "padding-left: 1.35rem" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
