<div class="mb-4 p-4 card">
  <%= form_with(model: bookmark) do |form| %>
    <% if bookmark.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>

        <ul>
          <% bookmark.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-group mb-3">
      <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
    </div>

    <div class="input-group mb-3">
      <%= form.text_field :url, class:"form-control", placeholder:"URL" %>
    </div>

    <div class="input-group mb-3">
      <%= form.text_area :description, class:"form-control", placeholder:"Description" %>
    </div>


    <div>
      <%= form.number_field :account_id, id: :bookmark_account_id, value:current_account.id, type: :hidden %>
    </div>


    <div class="d-flex justify-content-center">
      <%= form.submit "Update Bookmark", :class => "btn btn-dark" %>
    </div>

  <% end %>
</div>