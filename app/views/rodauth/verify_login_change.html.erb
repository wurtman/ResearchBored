<% content_for :title, rodauth.verify_login_change_page_title %>
<div class="flex-center">
  <div class="col-12 col-md-8 col-lg-5 p-4 p-md-5 card">
    <%= form_with url: rodauth.verify_login_change_path, method: :post, data: { turbo: false } do |form| %>
    <div class="form-group mb-3">
      <p>click button below to validate the change of your login credentials :</p>
      <%= form.submit rodauth.verify_login_change_button, class: "btn btn-sm btn-dark" %>
    </div>
    <% end %>
  </div>
</div>
