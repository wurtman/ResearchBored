<div class="page container pt-5 mt-4 ps-5" style="max-width: 990px">
  <div class="text-center">
    <h1>All tags</h1>
    <p class="lead">All available tags of your blog</p>
  </div>

  <% @tags.each do |tag| %>
    <div class="blog-card card mt-5 p-3">
      <div class="card-body">
        <h2 class="h5 m-0"><%= tag[:display_name] %></h2>   
        <p class="card-text gray-500 my-4 fs-small"><%= tag[:description].truncate(200) %></p>
        <div class="d-flex">
          <div class="fs-small gray-500 fw-600 me-auto">
            <%= link_to "View all #{tag[:number_of_articles]} article#{tag[:number_of_articles] > 1 ? 's' : ''}", blog_tag_path(tag[:shortname]), class: 'stretched-link gray-500' %>
          </div>
        </div>
      </div>

    </div>
  <% end %>


</div>
