<% content_for :meta_title, "Ruby-on-Rails Blog" %>

<div class="page container pt-5 mt-4 ps-5" style="max-width: 990px">
  <div class="text-center">
    <h1>The blog</h1>
    <p class="lead">Write a short statement here to write what is your blog about. It will emphasize your expertise and connect with your customer more easily.</p>
  </div>

  <% @articles.each do |article| %>
    <div class="blog-card card mt-5 p-3">
      <div class="card-body">
        <h2 class="h5 m-0"><%= article[:title] %></h2>   
        <p class="card-text gray-500 my-4 fs-small"><%= article[:description].truncate(200) %></p>
        <div class="d-flex">
          <div class="fs-small gray-500 fw-600 me-auto">
            <%= link_to article[:publication_date], blog_path(article[:slug]), class: 'stretched-link gray-500' %>
          </div>
          <div>
            <% article[:tags].each do |tag| %>
              <span class="fs-small gray-500 fw-600 me-2">
                #<%= tag %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
      
    </div>
  <% end %>

</div>
